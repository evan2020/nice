{

  "manifest_version": 2,


  "name": "click",


  "description": "click 特效",


  "version": "1.1.0",


  "permissions": [
          "http://*/*",
          "https://*/*",
          "storage",
          "contextMenus",
          "tabs",
          "notifications"
        ],


  "icons": {
          "16": "img/icon_16.png",
          "48": "img/icon_48.png",
          "128": "img/icon_128.png"
        },

  "browser_action": {


    "default_icon": "img/icon_128.png",


    "default_title": "nice",


    "default_popup": "server.html"
  },

  "background": {
    
    "scripts": ["js/server.js"],
    
    "persistent": false
  },
  
  "content_scripts": [
    {
      
      "matches" : ["http://*/*", "https://*/*"],
      "js": ["js/jquery.min.js","js/index.js","js/jquery.main.js","js/jquery-stars.js","js/smothscrool.js"],
      
      "css":["css/index.css"]
    }
  ]
}